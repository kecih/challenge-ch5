<!DOCTYPE html>
<html lang="en">
<%- include('partials/headergame.ejs') %>

<body>
    <div class="align-items-center header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-7 my-2">
                    <div class="d-inline-block mr-3">
                        <a href="index">
                            <svg width="60px" height="60px" viewBox="0 0 16 16" class="bi bi-chevron-left"
                                fill="rgb(114,76,33)" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                            </svg>
                        </a>
                    </div>
                    <a href="game">
                        <div class="d-inline-block mr-3">
                            <img src="../public/assets/guntingbatukertasresized.png" alt="">
                        </div>
                    </a>
                    <a href="game">
                        <div class="d-inline-block mx-auto align-middle title">
                            <h1>ROCK PAPER SCISSORS</h1>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <section class="game">
        <div class="container-fluid background">
            <div class="container content">
                <div class="row mb-1">
                    <div class="col-4 col-sm-3 offset-sm-1 d-flex player">
                        <h3 class="m-auto">PLAYER</h3>
                    </div>
                    <div class="col-4 col-sm-3 offset-2 offset-sm-4 d-flex computer">
                        <h3 class="m-auto">COM</h3>
                    </div>
                </div>

                <div class="row contentImage">
                    <div class="col-4 col-sm-3 offset-sm-1 d-flex">
                        <div class="m-auto greyBox playerImage px-4 py-3"><img src="../public/assets/baturesized.png"
                                class="player rock"></div>
                    </div>
                    <div class="col-4 col-sm-3 offset-2 offset-sm-4 d-flex">
                        <div class="m-auto greyBox compImage px-4 py-3"><img src="../public/assets/baturesized.png"
                                class="compRock"></div>
                    </div>
                </div>

                <div class="row align-items-center contentImage">
                    <div class="col-4 col-sm-3 offset-sm-1 d-flex">
                        <div class="m-auto greyBox playerImage px-4 py-3"><img src="../public/assets/kertasresized.png"
                                class="player paper"></div>
                    </div>
                    <div class="col-2 col-sm-2 offset-sm-1 d-flex p-0 versus">
                        <div class="m-auto p-0">
                            <h1>VS</h1>
                            <div class="align-middle">
                                <h5></h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 col-sm-3 offset-sm-1 d-flex">
                        <div class="m-auto greyBox compImage px-4 py-3"><img src="../public/assets/kertasresized.png"
                                class="compPaper"></div>
                    </div>
                </div>

                <div class="row contentImage">
                    <div class="col-4 col-sm-3 offset-sm-1 d-flex">
                        <div class="m-auto greyBox playerImage px-4 py-3"><img src="../public/assets/guntingresized.png"
                                class="player scissor">
                        </div>
                    </div>
                    <div class="col-4 col-sm-3 offset-2 offset-sm-4 d-flex">
                        <div class="m-auto greyBox compImage px-4 py-3"><img src="../public/assets/guntingresized.png"
                                class="compScissor"></div>
                    </div>
                </div>

                <div class="row my-2">
                    <div class="col-2 col-sm-2 offset-4 offset-sm-5 d-flex p-0">
                        <div class="m-auto p-0 reset"><img src="../public/assets/refreshresized.png" class="refresh"
                                onclick=window.location.reload()></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('partials/footergame.ejs') %> 
</body>

</html>